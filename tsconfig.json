{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./script",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "node_modules/@akashic/akashic-engine/lib/main.d.ts",
    "./src/main.ts"
  ]
}
