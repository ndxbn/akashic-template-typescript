{
  "name": "akashic-template-typescript",
  "private": true,
  "version": "0.0.0",
  "description": "",
  "main": "./script/main.js",
  "scripts": {
    "prepare": "run-s build",
    "prestart": "run-s build",
    "start": "run-p start:*",
    "start:akashic-serve": "akashic serve",
    "start:tsc-watch": "tsc -w",
    "test": "jest",
    "build": "run-s clean compile scan",
    "clean": "rimraf ./script ",
    "compile": "tsc",
    "scan": "akashic scan asset script",
    "lint": "prettier -l \"**/*\"",
    "fmt": "prettier --write \"**/*\""
  },
  "devDependencies": {
    "@akashic/akashic-cli": "1.8.26",
    "@akashic/akashic-engine": "2.6.1",
    "@types/jest": "24.0.23",
    "jest": "24.9.0",
    "npm-run-all": "4.1.5",
    "prettier": "1.19.1",
    "rimraf": "3.0.0",
    "ts-jest": "24.2.0",
    "typescript": "3.7.3"
  },
  "jest": {
    "transform": {
      "\\.tsx?$": "ts-jest"
    },
    "roots": [
      "<rootDir>/src/"
    ],
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "index.js",
      "index.ts"
    ],
    "testEnvironment": "node"
  }
}
