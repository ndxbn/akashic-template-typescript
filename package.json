{
  "name": "akashic-template-typescript",
  "private": true,
  "version": "0.0.0",
  "description": "",
  "main": "./script/main.js",
  "scripts": {
    "prepare": "run-s build",
    "prestart": "run-s build",
    "start": "akashic-sandbox .",
    "test": "jest",
    "build": "run-s clean compile scan",
    "clean": "rimraf ./script ",
    "compile": "tsc",
    "scan": "akashic-cli-scan asset script",
    "lint": "prettier -l \"**/*\"",
    "fmt": "prettier --write \"**/*\""
  },
  "devDependencies": {
    "@akashic/akashic-cli-scan": "0.2.12",
    "@akashic/akashic-engine": "2.4.14",
    "@akashic/akashic-sandbox": "0.13.61",
    "@types/jest": "24.0.11",
    "jest": "24.7.1",
    "npm-run-all": "4.1.5",
    "prettier": "1.17.0",
    "rimraf": "2.6.3",
    "ts-jest": "24.0.2",
    "typescript": "3.4.4"
  },
  "jest": {
    "transform": {
      "\\.tsx?$": "ts-jest"
    },
    "roots": [
      "<rootDir>/src/"
    ],
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "index.js",
      "index.ts"
    ],
    "testEnvironment": "node"
  }
}
